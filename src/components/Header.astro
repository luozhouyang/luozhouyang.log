---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import Button from './ui/Button.astro';
import SearchBox from './SearchBox.astro';
---

<header class="sticky top-0 z-40 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
	<nav class="container flex h-16 items-center justify-between">
		<h2 class="text-lg font-semibold"><a href="/" class="flex items-center space-x-2">{SITE_TITLE}</a></h2>
		<div class="flex items-center space-x-4">
			<div class="hidden md:block w-80">
				<SearchBox />
			</div>
			<!-- <Button variant="ghost" size="sm" as="a" href="/">Home</Button> -->
			<!-- <Button variant="ghost" size="sm" as="a" href="/about">About</Button> -->
		</div>
		<div class="social-links">
			<a href="https://github.com/luozhouyang" target="_blank">
				<span class="sr-only">Follow me on GitHub</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path></svg
				>
			</a>
		</div>
	</nav>
</header>
<style>
	.container {
		width: 100%;
		margin-left: auto;
		margin-right: auto;
		padding-left: 1rem;
		padding-right: 1rem;
		max-width: 1200px;
	}
	
	a {
		text-decoration: none;
		color: inherit;
	}
	
	.social-links,
	.social-links a {
		display: flex;
	}
	
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
